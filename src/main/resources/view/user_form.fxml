<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.UserFormController"
            styleClass="bg-serene"
            stylesheets="@../css/theme.css">

    <children>

        <!-- Section Title -->
        <Label layoutX="30.0" layoutY="20.0" text="ðŸ‘¤ User Management" styleClass="header-title" />

        <!-- Form Fields for User Data -->
        <VBox layoutX="30.0" layoutY="70.0" prefWidth="400.0" spacing="15.0">
            <children>
                <TextField fx:id="txtUserId" promptText="User ID" />
                <TextField fx:id="txtName" promptText="Full Name" />
                <TextField fx:id="txtContact" promptText="Contact (Email or Phone)" />
                <DatePicker fx:id="dateMembership" prefWidth="400.0" promptText="Membership Date" />
                <TextField fx:id="txtUsername" promptText="Username" />
                <PasswordField fx:id="txtPassword" promptText="Password" />
            </children>
        </VBox>

        <!-- Action Buttons (Styled Consistently) -->
        <HBox layoutX="30.0" layoutY="420.0" spacing="15.0">
            <children>
                <Button fx:id="btnAdd" onAction="#btnAddOnAction" text="Add User" styleClass="form-button" />
                <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" text="Update User" styleClass="form-button" />
                <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" text="Delete User" styleClass="form-button" />
                <Button fx:id="btnClear" onAction="#btnClearOnAction" text="Clear" styleClass="form-button" />
            </children>
        </HBox>

        <!-- Table for Displaying Users -->
        <VBox layoutX="480.0" layoutY="70.0" prefHeight="540.0" prefWidth="440.0" spacing="10.0">
            <children>
                <TextField fx:id="txtSearch" promptText="Search by Name or User ID..." styleClass="search-bar" />
                <TableView fx:id="tblUsers" prefHeight="500.0" styleClass="book-table">
                    <columns>
                        <TableColumn fx:id="colUserId" prefWidth="80.0" text="User ID" />
                        <TableColumn fx:id="colName" prefWidth="120.0" text="Name" />
                        <TableColumn fx:id="colContact" prefWidth="120.0" text="Contact" />
                        <TableColumn fx:id="colUsername" prefWidth="120.0" text="Username" />
                        <TableColumn fx:id="colMembershipDate" prefWidth="125.0" text="Member Since" />
                    </columns>
                </TableView>
            </children>
        </VBox>

    </children>
</AnchorPane>
