<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="950.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.ReturnFormController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Returns &amp; Fines">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Table for Displaying Currently Borrowed Books -->
        <VBox layoutX="30.0" layoutY="70.0" prefHeight="540.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label text="Select a record to process the return:">
                    <font>
                        <Font name="System Semibold" size="14.0" />
                    </font>
                </Label>
                <TableView fx:id="tblBorrowedBooks" prefHeight="500.0">
                    <columns>
                        <TableColumn fx:id="colRecordId" prefWidth="120.0" text="Record ID" />
                        <TableColumn fx:id="colBookId" prefWidth="120.0" text="Book ID" />
                        <TableColumn fx:id="colUserId" prefWidth="120.0" text="User ID" />
                        <TableColumn fx:id="colBorrowDate" prefWidth="200.0" text="Borrow Date" />
                    </columns>
                </TableView>
            </children>
        </VBox>

        <!-- Form for Processing the Return -->
        <VBox layoutX="660.0" layoutY="70.0" prefWidth="260.0" spacing="20.0" style="-fx-background-color: #f4f7f6; -fx-border-color: #dcdcdc; -fx-border-width: 1;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Process Return">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <DatePicker fx:id="dateReturn" prefWidth="220.0" promptText="Select Return Date" />
                <VBox>
                    <children>
                        <Label text="Calculated Fine (Rs.)" />
                        <TextField fx:id="txtFine" editable="false" promptText="0.00" style="-fx-background-color: #e2e2e2;" />
                    </children>
                </VBox>
                <Button fx:id="btnConfirmReturn" mnemonicParsing="false" onAction="#btnConfirmReturnOnAction" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Confirm Return" />
            </children>
        </VBox>
    </children>
</AnchorPane>
