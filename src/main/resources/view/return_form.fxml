<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.ReturnFormController"
            styleClass="bg-serene">

    <children>

        <!-- ✅ Styled Page Header with valid XML -->
        <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <top>
                <Label text="📦 Returns &amp; Fines"
                       styleClass="header-title"
                       BorderPane.alignment="CENTER_LEFT">
                    <BorderPane.margin>
                        <Insets top="20.0" bottom="10.0" left="30.0" />
                    </BorderPane.margin>
                </Label>
            </top>
        </BorderPane>

        <!-- Borrow Records Table -->
        <VBox layoutX="30.0" layoutY="70.0" prefHeight="540.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label text="📋 Select a record to process:" styleClass="dashboard-title"/>

                <!-- ✅ Styled TableView with theme -->
                <TableView fx:id="tblBorrowRecords"
                           prefHeight="500.0"
                           fixedCellSize="40"
                           styleClass="book-table">
                    <columns>
                        <TableColumn fx:id="colRecordId" prefWidth="90.0" text="Record ID"/>
                        <TableColumn fx:id="colBookId" prefWidth="90.0" text="Book ID"/>
                        <TableColumn fx:id="colUserId" prefWidth="90.0" text="User ID"/>
                        <TableColumn fx:id="colBorrowDate" prefWidth="120.0" text="Borrow Date"/>
                        <TableColumn fx:id="colReturnDate" prefWidth="120.0" text="Return Date"/>
                        <TableColumn fx:id="colFine" prefWidth="90.0" text="Fine (Rs.)"/>
                    </columns>
                </TableView>
            </children>
        </VBox>

        <!-- Action Form Panel -->
        <VBox layoutX="660.0" layoutY="70.0" prefWidth="260.0" spacing="20.0"
              style="-fx-background-color: #D9EAD3; -fx-border-color: #A7C4A0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <children>
                <Label text="🛠️ Process Action" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2F3E2E;" />

                <DatePicker fx:id="dateReturn" prefWidth="220.0" promptText="Select Return Date" />

                <VBox spacing="5.0">
                    <children>
                        <Label text="💰 Calculated Fine (Rs.):" style="-fx-text-fill: #333;" />
                        <TextField fx:id="txtFine" editable="false" promptText="0.00"
                                   style="-fx-background-color: #e2e2e2; -fx-font-weight: bold;" />
                    </children>
                </VBox>

                <Button fx:id="btnConfirmReturn"
                        onAction="#btnConfirmReturnOnAction"
                        text="Confirm Return"
                        styleClass="form-button"
                        prefHeight="40.0" prefWidth="220.0" />

                <Button fx:id="btnPayFine"
                        onAction="#btnPayFineOnAction"
                        text="Mark as Paid"
                        styleClass="form-button"
                        prefHeight="40.0" prefWidth="220.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>
