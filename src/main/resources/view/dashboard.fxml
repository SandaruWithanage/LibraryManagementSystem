<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--
  This is the final version of the dashboard layout.
  It includes all navigation buttons, including "Reports".
-->
<BorderPane prefHeight="700.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.DashboardController"
            stylesheets="@../css/theme.css">

    <!-- Left Sidebar for Navigation -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #B7C9B2;" BorderPane.alignment="CENTER">
            <children>
                <!-- Modern Logo and Styled Title -->
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/view/assets/images/library-modern.png" />
                    </image>
                    <VBox.margin>
                        <Insets top="40.0" bottom="10.0" />
                    </VBox.margin>
                </ImageView>

                <Label text="BookLib Admin" styleClass="dashboard-title">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </Label>

                <!-- Navigation Buttons -->
                <JFXButton fx:id="btnBooks" onAction="#handleBooksClick"
                           prefHeight="50.0" prefWidth="250.0"
                           text="Books" styleClass="dashboard-button"/>

                <JFXButton fx:id="btnUsers" onAction="#handleUsersClick"
                           prefHeight="50.0" prefWidth="250.0"
                           text="Users" styleClass="dashboard-button"/>

                <JFXButton fx:id="btnBorrow" onAction="#handleBorrowClick"
                           prefHeight="50.0" prefWidth="250.0"
                           text="Borrow Records" styleClass="dashboard-button"/>

                <JFXButton fx:id="btnReturns" onAction="#handleReturnsClick"
                           prefHeight="50.0" prefWidth="250.0"
                           text="Returns &amp; Fines" styleClass="dashboard-button"/>

                <!-- *** ADDED: The "Reports" button *** -->
                <JFXButton fx:id="btnReports" onAction="#handleReportsClick"
                           prefHeight="50.0" prefWidth="250.0"
                           text="Reports" styleClass="dashboard-button"/>

            </children>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: #F4F9F4;"
                   BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
