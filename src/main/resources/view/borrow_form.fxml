<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.BorrowFormController"
            styleClass="bg-serene">

    <children>
        <!-- Title with style -->
        <Label layoutX="30.0" layoutY="20.0" text="ðŸ“– Borrow Management" styleClass="header-title" />

        <!-- Form Fields with ComboBoxes -->
        <VBox layoutX="30.0" layoutY="70.0" prefWidth="400.0" spacing="15.0">
            <children>
                <TextField fx:id="txtRecordId"
                           editable="false"
                           promptText="Record ID (Auto-Generated)"
                           style="-fx-background-color: #e2e2e2;" />

                <ComboBox fx:id="cmbUserId" prefWidth="400.0" promptText="Select User..." />
                <Label fx:id="lblUserName" text="User Name: -" />

                <ComboBox fx:id="cmbBookId" prefWidth="400.0" promptText="Select Available Book..." />
                <Label fx:id="lblBookTitle" text="Book Title: -" />

                <DatePicker fx:id="dateBorrow" prefWidth="400.0" promptText="Borrow Date" />

                <!-- Styled Action Button Section -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="btnConfirmBorrow"
                                onAction="#btnConfirmBorrowOnAction"
                                text="Confirm Borrow"
                                styleClass="form-button"
                                minWidth="140" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Table Section -->
        <VBox layoutX="480.0" layoutY="70.0" prefHeight="540.0" prefWidth="440.0" spacing="10.0">
            <children>
                <Label text="Currently Borrowed Books" styleClass="dashboard-title" />
                <TableView fx:id="tblBorrowedBooks" prefHeight="500.0" styleClass="book-table">
                    <columns>
                        <TableColumn fx:id="colRecordId" prefWidth="90.0" text="Record ID" />
                        <TableColumn fx:id="colBookId" prefWidth="90.0" text="Book ID" />
                        <TableColumn fx:id="colUserId" prefWidth="90.0" text="User ID" />
                        <TableColumn fx:id="colBorrowDate" prefWidth="150.0" text="Borrow Date" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
